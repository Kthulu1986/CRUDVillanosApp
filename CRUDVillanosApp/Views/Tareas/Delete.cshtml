@model CRUDVillanosApp.Controllers.Tarea

@{
    ViewData["Title"] = "Delete";
}

<h1 id="app">{{title}}</h1>

<h3>Esta seguro de borrar el registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudadano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ciudadano.id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" id="btn" v-model="message" class="btn btn-danger" /> |
        <a asp-action="Index" id="vol">{{backMsg}}</a>
    </form>
</div>

@*Seccion Vue*@
@section Scripts {
    <script>
        var title = new Vue({
            el: "#app",
            data: {
                title: "Eliminar"
            }
        });
        var volver = new Vue({
            el: "#vol",
            data: {
                backMsg: "Volver"
            }
        });
        var boton = new Vue({
            el: "#btn",
            data: {
                message: "Eliminar"
            }
        });
    </script>
}