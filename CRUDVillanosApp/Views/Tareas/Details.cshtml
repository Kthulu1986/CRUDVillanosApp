@model CRUDVillanosApp.Controllers.Tarea

@{
    ViewData["Title"] = "Details";
}

<h1 id="app">{{title}}</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudadano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ciudadano.id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id" id="btn">{{message}}</a> |
    <a asp-action="Index" id="vol">{{backMsg}}</a>
</div>
@*Seccion Vue*@
@section Scripts {
    <script>
        var title = new Vue({
            el: "#app",
            data: {
                title: "Detalles"
            }
        });
        var volver = new Vue({
            el: "#vol",
            data: {
                backMsg: "Volver"
            }
        });
        var boton = new Vue({
            el: "#btn",
            data: {
                message: "Editar"
            }
        });
    </script>
}